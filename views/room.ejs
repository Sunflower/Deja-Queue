<% include partials/header %>

  <div id="appContainer">
    <div id="roomHeader" class="container">
      <h2 id="roomName"><%=roomName.toUpperCase()%></h2>
      <a class="btn btn-primary btn-sm" id="destroyRoom" href="/destroyRoom/<%=roomName%>">Destroy Room!</a>      
    </div>

    <form id="queueForm" class="form-inline justify-content-center" action="">
      <div class="input-group">
        <input id="name" autocomplete="off" placeholder="Student Name" type="text" class="form-control" required> 
        <div class="input-group-append">
          <button class="btn btn-outline-secondary" type="button">Join Queue!</button>
        </div>
      </div>
    </form>
    
    <hr>
    
    <ul id="queue">
      <% queue.forEach(function(student) { %>
        <li>
          <span class='sName'>
          <%= student %>
          </span>
          <span class='delete'>
            <i class='fas fa-check'></i>
          </span>
        </li>
      <% }) %>
    </ul>
  </div>
  
  
<script src="/js/room.js" defer></script>
<% include partials/footer %>